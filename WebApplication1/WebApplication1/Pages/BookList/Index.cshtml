@page
@model WebApplication1.Pages.BookList.IndexModel


<br />

<div class="container row p-0 m-0">

    <div class="col-9">
        <h2 class="text-info">Book List</h2>
    </div>

    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-check control text-white">Create New Book</a>

    </div>


    <div class="col-12 border p-3 mt-3">

        <form method="post">
            @if (Model.books.Count() > 0)
            {

                //
                <table id="mytable" class="table table-striped border">
                    @*class="table-secondary"*@
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="books.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="books.FirstOrDefault().Author"></label>
                        </th>
                        <th>
                            <label>Actions</label>
                        </th>

                    </tr>
                    @foreach (var item in Model.books)
                    {
                        <tr>

                            <td>@Html.DisplayFor(m => item.Name)</td>
                            <td>@Html.DisplayFor(m => item.Author)</td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Update</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {

                <p>No books available</p>
            }
        </form>

    </div>



</div>

@section scripts {
    <script type="text/javascript" src="~/js/lookTable.js"></script>
}
